{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "sql_server_name": {
      "type": "string"
    },
    "sql_user_name": {
      "type": "string"
    },
    "sql_user_password": {
      "type": "string"
    },
    "bookings_db_name": {
      "type": "string"
    },
    "reviews_site_name": {
      "type": "string"
    },
    "reviews_db_name": {
      "type": "string"
    },    
    "hotels_db_name": {
      "type": "string"
    },
    "suggestions_db_name": {
      "type": "string"
    },
    "tasks_db_name":{
      "type": "string"
    },
    "profiles_db_name": {
      "type": "string"
    },
    "storageImages_name": {
      "type": "string"
    },
    "storageAccountType": {
      "type": "string",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_ZRS",
        "Premium_LRS"
      ]
    },       
    "postgres_server_name": {
      "type": "string"
    },
    "postgres_user_name": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "Postgres administrator login name"
      }
    },
    "postgres_user_password": {
      "type": "string",
      "minLength": 8,
      "maxLength": 128,
      "metadata": {
        "description": "Database administrator password"
      }
    },
    "postgresDTU": {
      "type": "int",
      "allowedValues": [
        50,
        100
      ],
      "defaultValue": 50,
      "metadata": {
        "description": "Azure database for PostgreSQL pricing tier"
      }
    },
    "postgresSkuName": {
      "type": "string",
      "allowedValues": [
        "PostgreSQLB100",
        "PostgreSQLB50"
      ],
      "defaultValue": "PostgreSQLB100",
      "metadata": {
        "description": "Azure database for PostgreSQL sku name : PostgreSQLB100 (Basic 100 DTU tier) and PostgreSQLB50 (Basic 50 DTU tier)"
      }
    },
    "postgresSkuSizeMB": {
      "type": "int",
      "metadata": {
        "description": "Azure database for PostgreSQL Sku Size "
      }
    },
    "postgresSkuTier": {
      "type": "string",
      "allowedValues": [
        "Basic"
      ],
      "defaultValue": "Basic",
      "metadata": {
        "description": "Azure database for PostgreSQL pricing tier"
      }
    },
    "postgresqlVersion": {
      "type": "string",
      "allowedValues": [
        "9.5",
        "9.6"
      ],
      "metadata": {
        "description": "PostgreSQL version"
      }
    },         
    "unique_resources": {
      "type": "bool"
    },
    "environment": {
      "type": "string"
    }
  },
  "variables": {
    "unique_str": "[if(parameters('unique_resources'),uniqueString(resourceGroup().id), '')]",
    "suffix": "[concat(parameters('environment'), variables('unique_str'))]",
    "sql_server_name": "[concat(parameters('sql_server_name'),variables('suffix'))]",
    "storageImages_name": "[concat(parameters('storageImages_name'),variables('suffix'))]",
    "k8sinsights_name": "[concat('appinsights',variables('suffix'))]",
    "postgres_server_name": "[concat(parameters('postgres_server_name'),variables('suffix'))]"
  },
  "resources": [
    {
      "apiVersion": "2016-02-01-privatepreview",
      "kind": "",
      "location": "[resourceGroup().location]",
      "name": "[variables('postgres_server_name')]",
      "properties": {
        "version": "[parameters('postgresqlVersion')]",
        "administratorLogin": "[parameters('postgres_user_name')]",
        "administratorLoginPassword": "[parameters('postgres_user_password')]",
        "storageMB": "[parameters('postgresSkuSizeMB')]"
      },
      "sku": {
        "name": "[parameters('postgresSkuName')]",
        "tier": "[parameters('postgresSkuTier')]",
        "capacity": "[parameters('postgresDTU')]",
        "size": "[parameters('postgresSkuSizeMB')]",
        "family": "SkuFamily"
      },
      "type": "Microsoft.DBforPostgreSQL/servers",
      "resources": [
        {
          "type": "firewallrules",
          "apiVersion": "2016-02-01-privatepreview",
          "dependsOn": [
            "[concat('Microsoft.DBforPostgreSQL/servers/', variables('postgres_server_name'))]"
          ],
          "location": "[resourceGroup().location]",
          "name": "[concat(variables('postgres_server_name'),'firewall')]",
          "properties": {
            "startIpAddress": "0.0.0.0",
            "endIpAddress": "255.255.255.255"
          }
        },
        {
          "name": "[parameters('tasks_db_name')]",
          "type": "databases",
          "apiVersion": "2016-02-01-privatepreview",
          "properties": {
            "charset": "utf8",
            "collation": "English_United States.1252"
          },
          "dependsOn": [
            "[concat('Microsoft.DBforPostgreSQL/servers/', variables('postgres_server_name'))]"
          ]
        },
        {
          "name": "[parameters('reviews_db_name')]",
          "type": "databases",
          "apiVersion": "2016-02-01-privatepreview",
          "properties": {
            "charset": "utf8",
            "collation": "English_United States.1252"
          },
          "dependsOn": [
            "[concat('Microsoft.DBforPostgreSQL/servers/', variables('postgres_server_name'))]"
          ]
        }                
      ]
    },      
    {
      "apiVersion": "2015-05-01",
      "name": "[variables('k8sinsights_name')]",
      "type": "Microsoft.Insights/components",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "k8s appInsights"
      },
      "properties": {
        "ApplicationId": "[variables('k8sinsights_name')]"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('storageImages_name')]",
      "apiVersion": "2016-01-01",
      "location": "[resourceGroup().location]",
      "sku": {
          "name": "[parameters('storageAccountType')]"
      },
      "kind": "Storage", 
      "properties": {
      }
    },    
    {
      "type": "Microsoft.Sql/servers",
      "name": "[variables('sql_server_name')]",
      "apiVersion": "2014-04-01-preview",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "SQL Server"
      },
      "properties": {
        "administratorLogin": "[parameters('sql_user_name')]",
        "administratorLoginPassword": "[parameters('sql_user_password')]",
        "version": "12.0"
      },
      "resources": [
        {
          "type": "databases",
          "name": "[parameters('bookings_db_name')]",
          "apiVersion": "2014-04-01-preview",
          "location": "[resourceGroup().location]",
          "properties": {
            "edition": "Standard",
            "collation": "SQL_Latin1_General_CP1_CI_AS",
            "maxSizeBytes": "1073741824",
            "requestedServiceObjectiveName": "S1"
          },
          "tags": {
            "displayName": "DB Bookings"
          },
          "dependsOn": [
            "[concat('Microsoft.Sql/servers/', variables('sql_server_name'))]"
          ]
        },          
        {
          "type": "databases",
          "name": "[parameters('hotels_db_name')]",
          "apiVersion": "2014-04-01-preview",
          "location": "[resourceGroup().location]",
          "properties": {
            "edition": "Standard",
            "collation": "SQL_Latin1_General_CP1_CI_AS",
            "maxSizeBytes": "1073741824",
            "requestedServiceObjectiveName": "S1"
          },
          "tags": {
            "displayName": "DB Hotels"
          },
          "dependsOn": [
            "[concat('Microsoft.Sql/servers/', variables('sql_server_name'))]"
          ]
        },
        {
          "type": "databases",
          "name": "[parameters('profiles_db_name')]",
          "apiVersion": "2014-04-01-preview",
          "location": "[resourceGroup().location]",
          "properties": {
            "edition": "Standard",
            "collation": "SQL_Latin1_General_CP1_CI_AS",
            "maxSizeBytes": "1073741824",
            "requestedServiceObjectiveName": "S1"
          },
          "tags": {
            "displayName": "DB Profiles"
          },
          "dependsOn": [
            "[concat('Microsoft.Sql/servers/', variables('sql_server_name'))]"
          ]
        },        
        {
          "type": "databases",
          "name": "[parameters('suggestions_db_name')]",
          "apiVersion": "2014-04-01-preview",
          "location": "[resourceGroup().location]",
          "properties": {
            "edition": "Standard",
            "collation": "SQL_Latin1_General_CP1_CI_AS",
            "maxSizeBytes": "1073741824",
            "requestedServiceObjectiveName": "S1"
          },
          "tags": {
            "displayName": "DB Suggestions"
          },
          "dependsOn": [
            "[concat('Microsoft.Sql/servers/', variables('sql_server_name'))]"
          ]
        },
        {
          "type": "databases",
          "name": "[parameters('tasks_db_name')]",
          "apiVersion": "2014-04-01-preview",
          "location": "[resourceGroup().location]",
          "properties": {
            "edition": "Standard",
            "collation": "SQL_Latin1_General_CP1_CI_AS",
            "maxSizeBytes": "1073741824",
            "requestedServiceObjectiveName": "S1"
          },
          "tags": {
            "displayName": "DB Suggestions"
          },
          "dependsOn": [
            "[concat('Microsoft.Sql/servers/', variables('sql_server_name'))]"
          ]
        },                 
        {
          "type": "firewallrules",
          "name": "AllowAllWindowsAzureIps",
          "apiVersion": "2014-04-01-preview",
          "location": "[resourceGroup().location]",
          "properties": {
            "startIpAddress": "0.0.0.0",
            "endIpAddress": "0.0.0.0"
          },
          "dependsOn": [
            "[concat('Microsoft.Sql/servers/', variables('sql_server_name'))]"
          ]
        },
        {
          "type": "firewallrules",
          "name": "AllConnectionsAllowed",
          "apiVersion": "2014-04-01-preview",
          "location": "[resourceGroup().location]",
          "properties": {
            "startIpAddress": "0.0.0.0",
            "endIpAddress": "255.255.255.255"
          },
          "dependsOn": [
            "[concat('Microsoft.Sql/servers/', variables('sql_server_name'))]"
          ]
        }
      ]
    }
  ]
}
